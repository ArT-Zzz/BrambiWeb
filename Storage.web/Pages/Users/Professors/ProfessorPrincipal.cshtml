@page
@using Microsoft.EntityFrameworkCore
@using Microsoft.EntityFrameworkCore.ChangeTracking
@using AutoGens
@{
    // Establecer el título de la página
    ViewData["Title"] = "Professor Menu";
    string username = TempData["Username"]?.ToString() ?? "11111111";
    
}

<header>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <!-- Ve un historial de permisos que ha y no ha aprobado -->
                        <a class="nav-link" asp-area="" asp-page="/Users/Professor/ProfessorActions/ViewRequestsToApprove" asp-route-username="@username">My Student's Requests</a>
                    </li>
                    <li class="nav-item">
                        <!-- Opción para aprobar o denegar permisos -->
                        <a class="nav-link" asp-area="" asp-page="/Users/Professors/ProfessorActions/ApproveDenyRequest" asp-route-username="@username">Approve or Deny Permissions</a>
                    </li>
                    <li class="nav-item">
                        <!-- Opción para solicitar material -->
                        <a class="nav-link" asp-area="" asp-page="/" asp-route-username="@username">Request for Material</a>
                    </li>
                    <li class="nav-item">
                        <!-- Opcion para modificar permisos de material -->
                        <a class="nav-link" asp-area="" asp-page="/" asp-route-username="@username">Edit Request for Material</a>
                    </li>
                    <li class="nav-item">
                        <!-- Opcion para borrar permisos cuya fecha sea futura -->
                        <a class="nav-link" asp-area="" asp-page="/" asp-route-username="@username">Delete Request for Material</a>
                    </li>
                    <li class="nav-item">
                        <!--  Ve todos los equipos existentes en almacen-->
                        <a class="nav-link" asp-area="" asp-page="/">View All materials of the storage</a>
                    </li>
                    <li class="nav-item">
                        <!-- Modifica su perfil -->
                        <a class="nav-link" asp-area="" asp-page="/" asp-route-username="@username">Update my info</a>
                    </li>            
                </ul>
            </div>
        </nav>
    </div>
</header>

<h1>Welcome Professor! Please choose any of the options above</h1>
