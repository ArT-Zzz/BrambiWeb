@page
@{
    string username = TempData["Username"]?.ToString() ?? "11111111";
    ViewData["ShowNavBar"] = true;
    var userTypeAndUsername = Tuple.Create("Coordinador", username);
}
<div class="container">
    <div class="container">
        <!-- Incluir la vista parcial y pasar el modelo -->
        <partial name="_NavBar" model="userTypeAndUsername" />
    </div>
    <h1 class="display-4">Student CRUD Menu</h1>

    <div class="d-inline-block">
        <form method="get" action="/Users/Students/CRUD/ViewStudents">
            <button type="submit" class="btn btn-primary">View Students</button>
        </form>
    </div>

    <div class="d-inline-block">
        <form method="get" action="/Users/Students/CRUD/UpdateStudent">
            <button type="submit" class="btn btn-primary">Update Student</button>
        </form>
    </div>

    <div class="d-inline-block">
        <form method="get" action="/Users/Students/CRUD/DeleteStudents">
            <button type="submit" class="btn btn-primary">Delete Student</button>
        </form>
    </div>
</div>
